
<!-- using ejs templating  -->
<%- include('partials/header'); -%>

<h1>Compose</h1>


<!-- form that is of method post and actions at the /compose route -->
<form action="/compose" method="post">
  <div class="mb-3">
    <label for="titleInput" class="form-label">Title</label>
    <input
      name="titleInput"
      type="text"
      class="form-control"
      id="titleInput"
      placeholder="Enter your tile here..."
      autocomplete="off"
    />
  </div>
  <div class="mb-3">
    <label for="contentInput" class="form-label">Post</label>
    <textarea
      name="contentInput"
      class="form-control"
      id="contentInput"
      placeholder="Enter your post here..."
      rows="5"
      autocomplete="off"
    ></textarea>
  </div>
  <button
    style="margin-top: 20px"
    class="btn btn-primary"
    type="submit"
    name=""
  >
    Publish
  </button>
</form>

<%- include('partials/footer'); -%>
